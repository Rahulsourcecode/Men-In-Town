        background-size: cover;
        background-position: center;
        border-radius: 10px;
        height: 200px;
        
    }
    .cat-item {
        position: relative;
        overflow: hidden;
        transform-style: preserve-3d;
        transition: all 0.5s ease;
    }

    .cat-item:hover {
        transform: rotateY(20deg) scale(1.1);
    }

    .cat-item:before {
        content: "";
        position: absolute;
        top: -10px;
        right: -10px;
        bottom: -10px;
        left: -10px;
        background: rgba(255, 255, 255, 0.1);
        transform: translateZ(-1px);
        filter: blur(10px);
    }
</style>
    <!-- Carousel Start -->

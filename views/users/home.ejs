<%- include ('../layouts/header.ejs') %>
<style>
    #s1{
        background-image: url("https://livebcdamenschstorage.blob.core.windows.net/damensch/cms-media/blog-images/Tips-on-how-to-rock-that-tank-top-this-summer.jpg");
        background-size: cover;
        background-position: center;
        border-radius: 10px;
        height: 200px;
    }
    #s2{
        background-image: url("https://i.pinimg.com/736x/cc/26/60/cc2660a648aa6bef3beca6c6a3714a97.jpg");
